PKG_CXXFLAGS = $(SHLIB_OPENMP_CXXFLAGS)
PKG_LIBS = $(LAPACK_LIBS) $(BLAS_LIBS) $(SHLIB_OPENMP_CXXFLAGS)

# Append your flags to the default CXXFLAGS and CXX11FLAGS
CXXFLAGS = $(CXXFLAGS) -std=c++17 -O3 -Wall -w
CXX11FLAGS = $(CXX11FLAGS) -std=c++17 -O3 -Wall -w

